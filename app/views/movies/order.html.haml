-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class=>("hilite" if @item == "title")}= link_to " Movie Title", order_path('title'), :id=>'title_header' 
      %th= link_to "Rating", order_path('rating') 
      %th{:class=>('hilite' if @item == 'release_date')}= link_to "Release Date", order_path('release_date'), :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
